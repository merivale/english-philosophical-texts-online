{% extends 'layout.twig' %}

{% block content %}
  {% if error.status == 404 %}
    <h1>Page Not Found :(</h1>
    <p>The page you have requested does not exist. Please use the navigation menu to browse this site.</p>
  {% else %}
    <h1>Server Error :(</h1>
    <p>Sorry, something has gone wrong with our server.</p>
  {% endif %}
  <script>const error = {{ error|json_encode() }}</script>
{% endblock %}
